<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Uran Car Insurance</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="container mb-1">
        @Html.ActionLink("Admin Page", "Index", "Admin", new { area = "" }, new { @class = "btn btn-outline-dark btn-lg" })
        @Html.ActionLink("Request a Quote", "Index", "Home", new { area = "" }, new { @class = "btn btn-outline-dark btn-lg" })
    </header>
    
    <div class="container body-content col-sm-12 col-md-10 col-lg-8 mx-auto">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Uran Car Insurance</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
