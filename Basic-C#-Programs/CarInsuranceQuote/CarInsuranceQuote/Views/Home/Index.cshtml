
<div class="card shadow">
    <div class="card-header text-center">
        <h5>Get your quote Now:</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("GetQuote", "Home"))
        {
        <div class="row text-center text-sm-left">
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>First Name:</label><br />
                <input type="text" name="FirstName" />
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Last Name:</label><br />
                <input type="text" name="LastName" />
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Email:</label><br />
                <input type="email" name="Email" required/>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-6">
                <label>Date of Birth:</label><br />
                <input type="date" name="DateOfBirth" required/>
            </div>
        </div>

        <div class="row text-center text-sm-left">
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                <label>Car year:</label><br />
                <input type="number" name="CarYear" min="1900" max="2025" value="2010" required />
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                <label>Make:</label><br />
                <input type="text" name="CarMake" required/>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                <label>Model:</label><br />
                <input type="text" name="CarModel" required />
            </div>
        </div>

        <div class="row text-center text-sm-left">
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                <label>Have you ever had a DUI?</label><br />
                <input type="radio" name="DUI" value="true" required />Yes<br />
                <input type="radio" name="DUI" value="false" checked required/>No<br />
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                <label>How many speeding tickets have you received?</label><br />
                <input type="number" name="TicketNumber" min="0" max="10" value="0" required/>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
                <label>Would you like full coverage or liability insurance?</label><br />
                <input type="radio" name="FullCoverage" value="true" checked required/>Full coverage<br />
                <input type="radio" name="FullCoverage" value="false" required/>Liability<br />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-12 text-center">
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
        </div>
        }
    </div>

</div>